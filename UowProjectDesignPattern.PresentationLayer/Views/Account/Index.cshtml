@model ProcessViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Para Transfer Ekranı</h1>
<div class="container">
    <form method="post">
        <label>Gönderici ID</label>
        <input type="text" class="form-control" asp-for="SenderID" />
        <br />
        <label>Alıcı ID</label>
        <input type="text" class="form-control" asp-for="ReceiverID" />
        <br />
        <label>Miktar</label>
        <input type="text" class="form-control" asp-for="Amount" />
        <br />
        <button class="btn btn-warning">Gönder Gelsin</button>
    </form>
</div>

